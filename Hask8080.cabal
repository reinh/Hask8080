  ghc-options:         -Wall
  build-depends:       applicative-quoters >= 0.1.0.8
                     , array >= 0.5.0.0
                     , attoparsec >= 0.12.1.2
                     , base >=4.7 && <4.8
                     , binary >= 0.7.1.0
                     , bitwise >= 0.1.0.1
                     , bytestring >= 0.10.4.0
                     , lens >= 4.7
                     , mtl >= 2.2.1
                     , template-haskell
                     , vector >= 0.10.12.2
  hs-source-dirs:      src
  default-language:    Haskell2010
