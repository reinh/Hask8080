cabal-version:       >=1.10

executable Hask8080
  main-is:             Main.hs
  other-modules:       Hask8080.ASM
                     , Hask8080.CPU
                     , Hask8080.Disasm
                     , Hask8080.Instructions
                     , Hask8080.Opcode
                     , Hask8080.Types

